<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlue00</item>
        <item name="colorPrimaryDark">@color/colorBlue00</item>
        <item name="colorAccent">@color/colorBlue00</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:label">@string/app_name</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:lineSpacingExtra">0dp</item>-->
    </style>

    <style name="AppTheme.CardView">
        <item name="cardCornerRadius">11dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="AppTheme.InputTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorGrey66</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/colorGrey66</item>
        <item name="startIconTint">@null</item>
    </style>


    <style name="TextInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="AppTheme.AppEditText" parent="Widget.BaseAppEditText">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>
    </style>


    <style name="Widget.BaseAppEditText" parent="Widget.AppCompat.EditText" />

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="AppTheme.AppEditText.BorderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_line</item>
        <item name="android:textColorHighlight">@color/colorBlack80</item>
        <item name="android:textColorHint">@color/colorBlack80</item>
    </style>


    <style name="RoundRectViewRadius2">
        <item name="shape_roundRect_bottomLeftRadius">2dp</item>
        <item name="shape_roundRect_bottomRightRadius">2dp</item>
        <item name="shape_roundRect_topLeftRadius">2dp</item>
        <item name="shape_roundRect_topRightRadius">2dp</item>
    </style>

</resources>